<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>LARP線索搜查</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
                                                                                  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>
<body>
<h1>前情提要</h1>
<div id='divTyping'></div>
<button onclick="start()" id="start" style="display: none">開始搜查</button>
<script>
    const str = "美好幻想世界是由建仁企業開發一款將要上市，收到高度關注和討論的虛擬世界遊玩裝置，將類似安全帽的裝置戴在頭上就能進入虛擬世界，用自己的意識創造自己的虛擬角色，和其他真實世界的人互動。今天是產品發表會，但就在發表會上，除了王建仁、葉麗和游勞板，其餘的97名遊戲測試員在遊戲體驗結束後竟已無意識，皆還在醫院觀察中。請幫忙查出事件真相。";
    let i = 0;

    function typing() {
        const divTyping = document.getElementById('divTyping');
        if (i <= str.length) {
            let x=i-1;
            if(str.slice(x,i)==='，'||str.slice(x,i)==='。'){

                divTyping.innerHTML = str.slice(0, i++) + '_';
                setTimeout('typing()', 200);//遞歸調用
            }
            else{
                divTyping.innerHTML = str.slice(0, i++) + '_';
                setTimeout('typing()', 100);//遞歸調用
            }
        } else {
                divTyping.innerHTML = str;
                document.getElementById('start').style.display = 'block';

        }
    }

    typing();
    function start() {
        location.href = '/';
    }
</script>
</body>
</html>